{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true, // Optional, if you need source maps for debugging
    "lib": ["esnext", "dom"], // Include relevant libraries for both Node.js and browser environments
    "noUnusedLocals": true, // Optional, enable if you want to catch unused variables
    "noUnusedParameters": true, // Optional, enable if you want to catch unused parameters
    "moduleResolution": "node", // If you're using Node.js-style module resolution
    "resolveJsonModule": true, // Optional, if you want to import JSON files
    "skipDefaultLibCheck": true
  }
}
